---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>{{ site.title }}</title>
 <link href="{{ site.url }}{{ site.baseurl }}/rss.xml" rel="self"/>
 <link href="{{ site.url }}{{ site.baseurl }}/"/>
 <updated>{{ site.lastmod | date_to_xmlschema }}</updated>
 <id>{{ site.url }}</id>
 <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
 </author>

 {% for page in site.pages %}{% if page.layout != null %}
 <entry>
   <title>{{ page.title | xml_escape }}</title>
   <link href="{{ site.url }}{{ site.baseurl }}{{ page.url }}"/>
   <updated>{{ page.lastmod| date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ page.url }}</id>
   <content type="html">{{ page.content | xml_escape }}</content>
 </entry>
 {% endif %}{% endfor %}

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title | xml_escape }}</title>
   <link href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>{{ site.url }}{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
